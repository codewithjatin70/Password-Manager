

#Password Manager
show = "Welcome to Password Manager"
print(show.center(60,"*"))

data =[]
for i in range(1,100000) :
 while True :
    print("\n  1. Add Details")
    print("  2. Show Detail")
    print("  3. User and Password Match")
    print("  4. Exit")
    chioce = input("Enter you chioce :") 


    if chioce == "1" :
     name = input("Enter your name :")
     username = input("Enter your username :")
     password = input("Enter your password :")
     data.append(chioce)
     print("Details added successfully!")
 
    elif chioce == "2" :
     print("--- Entry", i ,"---")
     print(f"Name : {name}")
     print(f"Username : {username}")
     print(f"Password : {password}")
    
     
    elif chioce == "3" :
        user = input("Enter your user name :")
        Password = input("Enter your user password :")
        if( user == username and Password == password) :
            print("Your password is match ")
            
        else :
            print("Your password not match")
    elif chioce == "4":
     print("Exiting program. Goodbye!")
     break
    else:
     print("Invalid choice! Please enter a number between 1 and 4.") 